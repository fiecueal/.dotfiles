general {
  output_format = i3bar
  interval = 1
  separator = ""
}

# order += "battery 0"
order += "cpu_temperature cpu"
order += "cpu_temperature gpu"
order += "time"
order += "volume master"

# battery 0 {
#   format = "%status %percentage"
